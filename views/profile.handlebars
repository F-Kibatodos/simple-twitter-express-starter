<div class="row mt-3">
  <div class="col-md-4 display-flex justify-content-center">
    <img src="{{user.avatar}}" alt="{{user.name}}" style="width: 250px;margin-bottom: 25px;">
    <h3>{{user.name}}</h3>
    <p>{{user.introduction}}</p>
    <p>Tweets</p>
    <p><a href="/users/{{user.id}}/followings">Following</a></p>
    <p><a href="/users/{{user.id}}/followers">Follower</a></p>
    <p><a href="/users/{{user.id}}/likes">Like</a></p>
    <a href="/users/{{user.id}}/edit"><button class="btn btn-primary">Edit Profile</button></a>
  </div>
  <div class="col-md-8">
    {{#each user.Tweets}}
    <div class="card mb-3">
      <div class="card-body row">
        <div class="col-md-3">
          <img src="{{../user.avatar}}" alt="{{../user.name}}" style="width: 100px">
        </div>
        <div class="col-md-9">
          <p><a href="/users/{{../user.id}}/tweets">@{{../user.name}}</a> {{moment this.createdAt}}</p>
          <p>{{this.description}}</p>
          <span class="text-primary mr-3">Reply</span>
          <span class="text-danger">like</span>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>