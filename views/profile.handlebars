<div class="row mt-3">
  <div class="col-md-4 display-flex justify-content-center">
    <img src="{{profile.avatar}}" alt="{{profile.name}}" style="width: 250px;margin-bottom: 25px;">
    <h3>{{profile.name}}</h3>
    <p>{{profile.introduction}}</p>
    <p>Tweets</p>
    <p><a href="/users/{{profile.id}}/followings">Following</a></p>
    <p><a href="/users/{{profile.id}}/followers">Follower</a></p>
    <p><a href="/users/{{profile.id}}/likes">Like</a></p>
    {{#ifCond profile.id user.id}}
    <a href="/users/{{user.id}}/edit"><button class="btn btn-primary">Edit Profile</button></a>
    {{else}}
    <form action="/followships" method="POST" style="display: contents;">
      <button type="submit" class="btn btn-primary" name="id" value={{profile.id}}>Follow</button>
    </form>
    {{/ifCond}}
  </div>
  <div class="col-md-8">
    {{#each profile.Tweets}}
    <div class="card mb-3">
      <div class="card-body row">
        <div class="col-md-3">
          <img src="{{../profile.avatar}}" alt="{{../profile.name}}" style="width: 100px">
        </div>
        <div class="col-md-9">
          <p><a href="/users/{{../user.id}}/tweets">@{{../profile.name}}</a> {{moment this.createdAt}}</p>
          <p>{{this.description}}</p>
          <span class="text-primary mr-3">Reply</span>
          <span class="text-danger">like</span>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>